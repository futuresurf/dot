bar {
    mode hide # auto shows bar
    modifier $mda+$mdb
    font pango:bold:Monospace 10
    status_command i3status | i3sbar-x
    workspace_command i3sbar-ws
        colors {
            background          $bg
            statusline          $bz
            separator           $bz
            focused_workspace   $bg $bg $hi
            active_workspace    $bg $bg $bz
            inactive_workspace  $bg $bg $ac
            urgent_workspace    $rd $bg $ac
    } } # refer to .c/i3status/config for i3status configuration

