# HIDE TITLEBARS
font pango:DejaVu Sans Mono 0
default_border pixel 1

# color had defined for zenburn styled i3
set $bk  #000000
set $bf #2c2c2e
set $bg #000000
set $bx #444444
set $fg #9f9f9f
set $hi #efef8f
set $ac #a0afa0
set $tx #040404
set $ia #8f8f8f
set $be #8faf9f
set $yw #ccdc90
set $gn #88b090
set $rd #e89393
# yw;gn;rd
# ia;be
# ac;tx
# bg;fg

# syntax: colorclass;border;background;text;indicator;child_border
client.focused           $bk $bk $hi
client.unfocused         $bk $bk $ia
client.focused_inactive  $bg $bg $ac
client.urgent            $rd $rd $tx

# refer to .c/i3status/config for i3status configuration
bar {
	mode hide # auto shows bar on modifier press
	modifier Ctrl+$mda
     font pango:bold:Monospace 10
     #font pango:DejaVu Sans Mono 12
	#font pango:bold:monospace 10.5
 	status_command i3status
    	colors {
        	background          $bg
        	statusline          $hi
        	separator           $hi
        	focused_workspace   $yw $bg $yw
        	active_workspace    $bg $bg $be
        	inactive_workspace  $bg $bg $ac
        	urgent_workspace    $rd $bg $ac
    }
}

