# BAR ##################################################

bar {
	mode hide # auto shows bar on modifier press
	modifier Ctrl+$mod
	font pango:DejaVu Sans Mono 12
	font pango:bold:monospace 11
 	status_command i3status

    	colors {
        	background          $bg
        	statusline          $hi
        	separator           $hi
        	focused_workspace   $gn        $bg        $hi
        	active_workspace    $gn        $ac        $hi
        	inactive_workspace  $bg        $bg        $ia
        	urgent_workspace    $rd        $bg        $ac
    }
}

