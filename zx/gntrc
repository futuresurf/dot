# Remap some keys for GntEntry
[GntEntry::remap]
# Remap the up-arrow to the left-arrow
#^[[A = ^[[D
# Remap the down-arrow to the right-arrow
#^[[B = ^[[C
# Remap 'a' to 'bcd'
# a = bcd
# Completely ignore the key 'q'
# q =
# But the following will NOT work
# abc = bcd

